@model CRUD_Project.Models.Employee

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="title">
    <h3 class="text-center">Edit Details</h3>
</div>


<div class="col-md-4"></div>
<div class="col-md-8">
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Profile" class="control-label"></label>
            <input asp-for="Profile" class="form-control" />
            <span asp-validation-for="Profile" class="text-danger"></span>
        </div>

        <div class="col-md-2" style="margin-top: 2em;">
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
        </div>
    </form>
</div>

<div class="col-md-2" style="margin-top: 2em;">
    @Html.ActionLink("DashBoard", "Index")
</div>